{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "declaration": true,                // 启用类型声明生成
    "declarationDir": "./dist",         // 类型声明文件输出到 dist 目录
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
  },
  "include": [
    "src/**/*"
  ]
}
